<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#bd1919"
    android:orientation="vertical"
    android:id="@+id/layout_banner">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription=""
        android:src="@drawable/banner006"
        android:id="@+id/imageView_banner"
        android:background="#2633a1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:layout_gravity="bottom|right"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="设置"
            android:id="@+id/textView_set"
            android:textColor="#ffffff"
            android:textSize="13dp"
            android:background="@drawable/btn_round"
            android:padding="4dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_set"
            android:src="@android:drawable/ic_menu_preferences"
            android:background="@drawable/btn_round"
            android:padding="4dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:layout_gravity="bottom|right"
        android:visibility="gone">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton_leftMenu1"
            android:layout_gravity="center"
            android:src="@drawable/menu"
            android:background="@drawable/targ_round"
            android:scaleType="fitCenter"
            android:padding="3dp" />

    </LinearLayout>

</FrameLayout>