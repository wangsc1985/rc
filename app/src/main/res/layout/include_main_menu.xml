<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/message_border">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_menu">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="月"
                android:textColor="#b90404"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView_select_month"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="月"
                android:textColor="#b90404"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2016年9月16日"
                android:id="@+id/textView_selected_day"
                android:textSize="18dp"
                android:textColor="@color/button_material_dark"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="丙申年 甲子月 丙戊日"
                android:id="@+id/tvGanZhi"
                android:layout_gravity="center_horizontal"
                android:textSize="13dp"
                android:textColor="@color/button_material_dark" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/btnToday"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="今"
                android:textColor="#b90404"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_gravity="center" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:id="@+id/layout_leftMenu">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="菜单"
                    android:id="@+id/textView_leftMenu"
                    android:textColor="#b90404"
                    android:textSize="13dp"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/btn_round" />
            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton_leftMenu"
                android:padding="4dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_agenda"
                android:background="@drawable/btn_round"
                android:visibility="invisible" />
        </FrameLayout>

    </RelativeLayout>


    <View
        android:id="@+id/splite1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>